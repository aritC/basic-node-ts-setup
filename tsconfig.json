{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [],
    "module": "Node16",
    "rootDir": "./",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node16"
  },
  "exclude": ["node_modules/"],
  "include": ["src", "package.json"]
}
